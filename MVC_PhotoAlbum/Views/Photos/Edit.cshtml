@model MVC_PhotoAlbum.Models.Photo

@{
    ViewBag.Title = "Edit";
}

<h2>編輯</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>相片</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2", @style= "font-weight: 700;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight: 700;" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @style = "height: 150px" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.PhotoUrl,"相片", htmlAttributes: new { @class = "control-label col-md-2", @style= "font-weight: 700;" })
            <div class="col-md-10">
                <image src="@Html.DisplayFor(model => model.PhotoUrl)" style="max-width:100%" />
                @Html.HiddenFor(model => model.PhotoUrl)
                @Html.ValidationMessageFor(model => model.PhotoUrl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.IsCover, htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight: 700;" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsCover)
                    @Html.ValidationMessageFor(model => model.IsCover, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.InitDate, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.InitDate, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.HiddenFor(model => model.InitDate)
                @Html.ValidationMessageFor(model => model.InitDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.PhotoCategoryId, "所屬相簿", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-weight: 700;" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.MyPhotoCategory.Name)
                @*@Html.DropDownList("PhotoCategoryId", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.HiddenFor(model => model.PhotoCategoryId)
                @Html.ValidationMessageFor(model => model.PhotoCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確認送出" class="btn app-btn-primary" />
                <a href="@Url.Action("Index", new { id = @Model.PhotoCategoryId } )" class="btn app-btn-primary">返回</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
